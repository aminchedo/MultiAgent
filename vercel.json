{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth/$1"
    },
    {
      "src": "/api/generate",
      "dest": "/api/generate"
    },
    {
      "src": "/api/status/(.*)",
      "dest": "/api/status/[job_id]"
    },
    {
      "src": "/api/download/(.*)",
      "dest": "/api/download/[job_id]"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/auth/login.py": {
      "maxDuration": 30
    },
    "api/generate.py": {
      "maxDuration": 60
    },
    "api/status/[job_id].py": {
      "maxDuration": 30
    },
    "api/download/[job_id].py": {
      "maxDuration": 30
    }
  },
  "env": {
    "PYTHONPATH": "."
  }
}