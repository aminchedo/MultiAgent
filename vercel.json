{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "functions": {
    "api/auth/login.py": {
      "maxDuration": 30
    },
    "api/generate.py": {
      "maxDuration": 60
    },
    "api/status/[job_id].py": {
      "maxDuration": 30
    },
    "api/download/[job_id].py": {
      "maxDuration": 30
    }
  },
  "env": {
    "PYTHONPATH": ".",
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}