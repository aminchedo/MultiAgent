# =============================================================================
# Multi-Agent Code Generation System - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# =============================================================================
# OPENAI CONFIGURATION (REQUIRED)
# =============================================================================
# Your OpenAI API key - get it from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI model to use for code generation
OPENAI_MODEL=gpt-4

# OpenAI API configuration
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server host and port (HF Spaces requires 0.0.0.0:7860)
HOST=0.0.0.0
PORT=7860
SERVER_HOST=0.0.0.0
SERVER_PORT=7860

# Server performance settings
SERVER_WORKERS=1
SERVER_RELOAD=false
SERVER_LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database URL (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///./multiagent.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/multiagent
DATABASE_ECHO=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT secret key for authentication (change in production!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-please

# JWT configuration
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# API key for additional security (optional)
API_KEY=your-optional-api-key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment
APP_ENV=production
APP_NAME=Multi-Agent Code Generation System
APP_VERSION=1.0.0
DEBUG=false

# Maximum concurrent code generations
MAX_CONCURRENT_GENERATIONS=3

# Request timeout in seconds
TIMEOUT_SECONDS=300

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Rate limiting settings
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_BURST=20

# =============================================================================
# FILE HANDLING CONFIGURATION
# =============================================================================
# Maximum file upload size in MB
MAX_FILE_SIZE_MB=10

# Allowed file types for upload
ALLOWED_FILE_TYPES=.py,.js,.html,.css,.md,.txt,.json,.yml,.yaml,.toml

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/app.log

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# =============================================================================
# Redis URL for caching and session management
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL=300

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=*

# =============================================================================
# MONITORING & METRICS (OPTIONAL)
# =============================================================================
# Enable Prometheus metrics
ENABLE_METRICS=true

# Metrics endpoint path
METRICS_PATH=/metrics

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
# Agent-specific settings
AGENT_TIMEOUT=120
AGENT_MAX_RETRIES=3

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Frontend static files path
STATIC_FILES_PATH=static

# Enable frontend serving
SERVE_FRONTEND=true

# =============================================================================
# WEBHOOK CONFIGURATION (OPTIONAL)
# =============================================================================
# Webhook URL for notifications
# WEBHOOK_URL=https://your-webhook-url.com/notify

# Webhook secret for validation
# WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development mode settings (set to false in production)
DEV_MODE=false
AUTO_RELOAD=false
ENABLE_DOCS=true

# =============================================================================
# BACKUP CONFIGURATION (OPTIONAL)
# =============================================================================
# Database backup settings
# BACKUP_ENABLED=true
# BACKUP_INTERVAL_HOURS=24
# BACKUP_RETENTION_DAYS=30

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================
# Email settings for notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@yourapp.com

# =============================================================================
# HUGGING FACE SPACES SPECIFIC
# =============================================================================
# These are automatically set by HF Spaces
# SPACE_ID=Really-amin/ultichat-hugginigfae
# SPACE_REPO_NAME=ultichat-hugginigfae
# SPACE_AUTHOR_NAME=Really-amin