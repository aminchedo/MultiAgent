# ==================================================
# Multi-Agent Code Generation System Environment Configuration
# ==================================================

# REQUIRED: OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# REQUIRED: JWT Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
APP_NAME="Multi-Agent Code Generator"
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=1
SERVER_RELOAD=false

# Database Configuration (Local/Docker only)
DATABASE_URL=sqlite:///./app.db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=multiagent123
POSTGRES_DB=multiagent

# Redis Configuration (Local/Docker only)
REDIS_URL=redis://localhost:6379/0

# File Upload Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.py,.js,.html,.css,.md,.txt,.json

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Security Settings
CORS_ORIGINS=*
TRUSTED_HOSTS=localhost,127.0.0.1

# Platform-Specific Settings
# ===========================

# Vercel Deployment
VERCEL=0
VERCEL_ENV=development

# Hugging Face Spaces
HUGGINGFACE_SPACES=0
HF_TOKEN=hf_your_hugging_face_token_here

# Development Settings
# ====================
DEVELOPMENT=true
TESTING=false

# Monitoring (Optional)
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false
GRAFANA_PASSWORD=admin123

# Third-party Integrations (Optional)
GITHUB_TOKEN=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Agent Configuration
AGENT_TIMEOUT=30
MAX_CONCURRENT_AGENTS=5
AGENT_RETRY_ATTEMPTS=3

# Code Generation Settings
MAX_CODE_LENGTH=50000
SUPPORTED_LANGUAGES=python,javascript,typescript,html,css,sql
DEFAULT_PROJECT_TYPE=web_app

# ==================================================
# IMPORTANT SECURITY NOTES:
# ==================================================
# 1. Never commit actual secrets to version control
# 2. Use environment-specific values in production
# 3. Rotate JWT_SECRET_KEY regularly
# 4. Keep OPENAI_API_KEY secure
# 5. Use strong passwords for database credentials
# ==================================================