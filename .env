# Hugging Face Spaces Environment Configuration
# Multi-Agent Code Generation System

# ===========================================
# CRITICAL: Set your OpenAI API key here or in Hugging Face Secrets
# ===========================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# ===========================================
# Application Settings
# ===========================================
APP_NAME="Multi-Agent Code Generator"
APP_VERSION="1.0.0"
DEBUG=false

# ===========================================
# Server Configuration (Optimized for Hugging Face)
# ===========================================
HOST=0.0.0.0
PORT=7860
WORKERS=1
SERVER_RELOAD=false
SERVER_LOG_LEVEL=info

# ===========================================
# Database Configuration (SQLite for HF Spaces)
# ===========================================
DATABASE_URL=sqlite+aiosqlite:///./multiagent.db
DATABASE_ECHO=false

# ===========================================
# Security Settings
# ===========================================
JWT_SECRET_KEY=change-this-super-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ===========================================
# AI Agent Configuration
# ===========================================
CREWAI_VERBOSE=true
CREWAI_MEMORY=true
MAX_ITER=10
MAX_EXECUTION_TIME=300
MAX_CONCURRENT_GENERATIONS=3
TIMEOUT_SECONDS=300

# ===========================================
# File Handling
# ===========================================
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
MAX_FILE_SIZE=10485760

# ===========================================
# Cache Settings (Memory-based)
# ===========================================
CACHE_TTL=3600
MAX_CACHE_SIZE=1000

# ===========================================
# Rate Limiting (Conservative for shared hosting)
# ===========================================
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=3600

# ===========================================
# WebSocket Configuration
# ===========================================
WEBSOCKET_TIMEOUT=60
WEBSOCKET_PING_INTERVAL=30

# ===========================================
# Monitoring (Disabled for simplicity)
# ===========================================
ENABLE_PROMETHEUS=false
METRICS_ENDPOINT=/metrics

# ===========================================
# CORS Settings (Open for HF Spaces)
# ===========================================
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ===========================================
# Hugging Face Specific (Optional)
# ===========================================
HF_SPACE_ID=
HF_TOKEN=

# ===========================================
# Backend URL
# ===========================================
BACKEND_URL=http://localhost:7860
